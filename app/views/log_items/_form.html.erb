<%= form_for([@log, log_item]) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :content, (log_item.milestone? ? "Name" : "Content") %><br />
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :desc, "Description" %><br />
    <%= f.text_area :desc %>
  </div>
  <div class="actions">
    <%= f.hidden_field :milestone %>
    <%= f.submit %>
  </div>
<% end %>
