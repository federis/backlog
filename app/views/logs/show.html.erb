<div id = "log">
  <h3><%= @log.name %></h3>

  <div>
    <%= link_to "Add Item", "#add_item_form", class: "btn", data: { toggle: "modal" } %>
    <%= link_to "Add Milestone", "#add_milestone_form", class: "btn", data: { toggle: "modal" } %>
    <%= link_to "Manage Collaborators", log_collaborations_url(@log), class: "btn" %>
  </div>

  <div id="add_item_form" class="modal hide fade" style = "padding: 30px">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h3>Add Item</h3>
    </div>
    <div class="modal-body">
      <%= render partial: 'log_items/form', locals: { log_item: LogItem.new } %>
    </div>
  </div>

  <div id="add_milestone_form" class="modal hide fade" style = "padding: 30px">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h3>Add Milestone</h3>
    </div>
    <div class="modal-body">
      <%= render partial: 'log_items/form', locals: { log_item: LogItem.new(milestone: true) } %>
    </div>
  </div>

  <div class = "clock">
    <%= image_tag ("clock.png") %> complete sooner
  </div>
  <div class="log">
    <%= render @log.log_items %>
  </div>
  <div class = "clock">
    <%= image_tag ("clock.png") %> complete later
  </div>


  <div id="confirm_delete" class="modal hide fade">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3>Confirm delete</h3>
    </div>
    <div class="modal-body">
      <p>Are you sure you want to delete this item?</p>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal">Cancel</a>
      <a href="#" class="confirm-delete-button btn btn-danger">Delete</a>
    </div>
  </div>
</div>